{
    "manifest_version": 2,
    "name": "Crypto Address Validator",
    "version": "1.0",
    "description": "Validates Solana and Ethereum addresses when copied",
    "permissions": [
      "storage",
      "activeTab",
      "tabs",
      "http://*/*",
      "https://*/*"
    ],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "browser_action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "run_at": "document_end"
      }
    ],
    "web_accessible_resources": [
      "page-script.js"
    ]
  }